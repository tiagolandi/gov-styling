<h1>Teste Buttons</h1>

<div class="container-fluid">
  <p class="h5">Primário</p>
  <button class="br-button" type="button" primary>Entrar
  </button>
  <div class="mt-3">
    <button class="br-button" type="button" primary><i class="fas fa-print"></i>Imprimir
    </button>
  </div>
  <div class="mt-3">
    <button class="br-button" type="button" primary>Avançar<i class="fas fa-angle-right"></i>
    </button>
  </div>
  <p class="h5 mt-5">Call to Action</p>
  <button class="br-button" type="button" action>Adicionar
  </button>
  <p class="h5 mt-5">Secundário</p>
  <button class="br-button" type="button" secondary>Voltar
  </button>
  <div class="mt-3">
    <button class="br-button" type="button" secondary><i class="fas fa-eraser"></i>Limpar
    </button>
  </div>
  <div class="mt-3">
    <button class="br-button" type="button" secondary><i class="fas fa-angle-left"></i>Voltar
    </button>
  </div>
  <p class="h5 mt-5">Terciário</p>
  <button class="br-button" type="button">
    <u>Cancelar</u>
  </button>
  <div class="mt-3">
    <button class="br-button" type="button"><i class="fas fa-sliders-h"></i>Filtrar
    </button>
  </div>
  <p class="h5 mt-5">Circular</p>
  <button class="br-button" type="button" primary circle><i class="fas fa-plus"></i>
  </button>
  <div class="d-inline ml-3">
    <button class="br-button" type="button" secondary circle><i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="d-inline ml-3">
    <button class="br-button" type="button" circle><i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="d-inline ml-3">
    <button class="br-button" type="button" action circle><i class="fas fa-plus"></i>
    </button>
  </div>
  <p class="h5 mt-5">Mini</p>
  <button class="br-button" type="button" primary mini>Entrar
  </button>
  <div class="d-inline ml-3">
    <button class="br-button" type="button" secondary mini>Voltar
    </button>
  </div>
  <div class="mt-3">
    <button class="br-button" type="button" primary circle mini><i class="fas fa-plus"></i>
    </button>
    <div class="d-inline ml-3">
      <button class="br-button" type="button" secondary circle mini><i class="fas fa-plus"></i>
      </button>
    </div>
    <div class="d-inline ml-3">
      <button class="br-button" type="button" circle mini><i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
  <p class="h5 mt-5">Estados</p>
  <button class="br-button" type="button" primary disabled>Entrar
  </button>
  <div class="mt-3">
    <button class="br-button" type="button" primary loading>Entrar
    </button>
  </div>
</div>
<script src="../js/dsgov.js"></script>
